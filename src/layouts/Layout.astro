---
import Head from '../components/Head.astro';
import Appbar from "../components/Appbar.astro";
import Footer from "../components/Footer.astro";

const { title, action } = Astro.props
---

<!doctype html>
<html lang="en" class="dark-side">
	<head>
		<Head/>
		<title>{title}</title>
	</head>
	<body class="cloak gradient gradient-crimson-depth bg-pattern-grid-dot masked">
        <Appbar/>
        <slot />
        <Footer/>
	</body>
</html>

<style>
    body {
        min-height: 100vh;
    }
</style>